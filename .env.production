# Production Environment Configuration
NODE_ENV=production
PORT=4000

# Client Configuration - Update these with your production URLs
VITE_API_URL=https://your-domain.com
VITE_SOCKET_URL=https://your-domain.com
VITE_APP_NAME=ScribbleBoard
VITE_APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=your_production_database_url
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=scribbleboard_prod
DB_USER=your_production_db_user
DB_PASSWORD=your_production_db_password

# Session Configuration
SESSION_SECRET=your_production_session_secret_here
SESSION_MAX_AGE=86400000

# CORS Configuration - Add your production domains
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# Security
JWT_SECRET=your_production_jwt_secret
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=warn
LOG_FILE=logs/production.log

# External Services
REDIS_URL=your_production_redis_url
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_production_email@gmail.com
SMTP_PASS=your_production_app_password

# Monitoring
SENTRY_DSN=your_production_sentry_dsn
ANALYTICS_ID=your_production_analytics_id
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                             // ✅ enables import.meta.url
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "../",                               // ✅ shared + server/src
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",                                 // ✅ path alias support
    "paths": {
      "shared/*": ["../shared/*"]                   // ✅ alias for shared
    }
  },
  "include": ["src", "../shared"],                  // ✅ includes both
  "exclude": ["dist", "node_modules"]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    
    "rootDir": "../",                            // Include all source + shared
    "outDir": "./dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",                            // Enables custom path aliases
    "paths": {
      "shared/*": ["../shared/*"]              // Alias "shared" points to ../shared
    }
  },
  "include": ["src", "../shared"],             // Include both code and schema
  "exclude": ["dist", "node_modules"]
}

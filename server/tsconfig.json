{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": ".",                      // ✅ includes both src and ../shared
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",                      // ✅ base for paths
    "paths": {
      "shared/*": ["./shared/*"]
    }
  },
  "include": ["src", "shared"],       // ✅ includes shared code
  "exclude": ["dist", "node_modules"]
}
